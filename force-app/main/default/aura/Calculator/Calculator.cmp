<aura:component >
    <aura:attribute name="input1" type="integer"  description="For First Input"/>
     <aura:attribute name="input2" type="integer"  description="For second Input"/>
     <aura:attribute name="output" type="integer"  description="For output"/>
    <div class="slds-p-around_small">
    <lightning:input type="number" value="{!v.input1}" label="please Enter First Value" required="true"/>
       <lightning:input type="number" value="{!v.input2}" label="please Enter second Value" required="true"/>
     <lightning:input type="number" value="{!v.output}" label=" The output is" />
    <br/>
    <lightning:button variant="success" value="Component Methods" label="Add" onclick="{!c.doAdd}" />
        <lightning:button  variant="success" value="Component Methods" label="Sub" onclick="{!c.doSub}" />
        <lightning:button  variant="success" value="Component Methods" label="Multiply" onclick="{!c.doMul}" />
        <lightning:button  variant="success" value="Component Methods" label="Divide" onclick="{!c.doDiv}" />
    </div>
</aura:component>